model Medicines {
  id        String @id @default(uuid())
  sellerId String
  user      User    @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  categoriesId String?
  name      String
  image     String
  stock     Int
  price     Int
  description String
  reviews Reviews[]
  orders  Orders[]
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([sellerId])
  @@map("medicines")
}
