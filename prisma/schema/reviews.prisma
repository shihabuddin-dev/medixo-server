model Reviews {
    id          String    @id @default(uuid())
    customerId String
    user        User      @relation(fields: [customerId], references: [id], onDelete: Cascade)
    medicineId String
    medicines   Medicines @relation(fields: [medicineId], references: [id], onDelete: Cascade)
    ratings     Int
    comment     String
    createdAt DateTime @default(now())

    @@index([customerId])
    @@map("reviews")
}
