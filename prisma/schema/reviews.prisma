model Reviews {
    id          String    @id @default(uuid())
    customerId String
    user        User      @relation(fields: [customerId], references: [id], onDelete: Cascade)
    medicine_id String
    medicines   Medicines @relation(fields: [medicine_id], references: [id], onDelete: Cascade)
    ratings     Int
    comment     String
    created_at DateTime @default(now())

    @@index([customerId])
    @@map("reviews")
}
