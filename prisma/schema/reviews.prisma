model Reviews {
    id          String    @id @default(uuid())
    customer_id String
    user        User      @relation(fields: [customer_id], references: [id], onDelete: Cascade)
    medicine_id String
    medicines   Medicines @relation(fields: [medicine_id], references: [id], onDelete: Cascade)
    ratings     Int
    comment     String
    created_at DateTime @default(now())

    @@index([customer_id])
    @@map("reviews")
}
